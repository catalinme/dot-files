        <example type="correct">Mi volas, ke panon vi manĝu.</example>
      </rule>
      <rule>
        <pattern mark_from="1">
          <token postag="SENT_START"/>
          <token>da</token>
        </pattern>
        <message>Oni ne povas uzi «da» memstare.</message>
        <example type="incorrect"><marker>Da</marker> pano mi manĝis.</example>
