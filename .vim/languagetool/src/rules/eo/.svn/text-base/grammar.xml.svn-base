      <example type="incorrect">Mi studas, <marker>por ke mi sukcesos</marker>.</example>
      <example type="correct">Mi studas, por ke mi sukcesu.</example>
    </rule>

    <rule id="SI_TRIAPERSONA" name="si triapersona">
